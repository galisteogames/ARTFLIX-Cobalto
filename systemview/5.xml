<theme>
<formatVersion>4</formatVersion>


<view name="system">

	<image name="art" extra="true">
		<size>1 1</size>
		<pos>0 0</pos>
		<origin>0 0</origin>
	</image> 	

	<image name="logo">
		<path>./../assets/logos/$system.png</path>
		<path>./../assets/logos/$system.svg</path>
	</image>
	
	<image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/cobaltoverlay.png</path>
         <zIndex>41</zIndex>
	</image>

	<video name="md_video" extra="true">
         <path>{random}</path>
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>20</zIndex>
         <delay>2.8</delay>
	</video>

	<text name="info1" extra="true">
		<fontPath>./../_inc/fonts/texgyre.otf</fontPath>
		<color>FFFFFF</color>
		<alignment>left</alignment>
		<fontSize>0.022</fontSize>
		<lineSpacing>1</lineSpacing>
		<size>0.38 0</size>
		<pos>0.065 0.509</pos>
		<glowColor>00000016</glowColor>
		<glowSize>2</glowSize>
		<zIndex>42</zIndex>
      </text>	

	<text name="info2" extra="true">
		<fontPath>./../_inc/fonts/polan.otf</fontPath>
		<color>FFFFFF</color>
		<alignment>left</alignment>
 		<fontSize>0.0428</fontSize>
		<lineSpacing>1</lineSpacing>
		<forceUppercase>true</forceUppercase>
		<size>0.46 0.35</size>
		<pos>0.065 0.249</pos>
		<glowColor>00000016</glowColor>
		<glowSize>2</glowSize>
		<zIndex>42</zIndex>
      </text>
  

	<text name="info3" extra="true">
		<fontPath>./../_inc/fonts/texgyre.otf</fontPath>
		<color>FFFFFF</color>
		<alignment>left</alignment>
		<fontSize>0.018</fontSize>
		<lineSpacing>1</lineSpacing>
		<size>0.35 0</size>
		<pos>0.065 0.339</pos>
		<glowColor>00000016</glowColor>
		<glowSize>1</glowSize>
		<zIndex>42</zIndex>
				<storyboard>
<animation property="opacity" from="1" to="0" begin="6000" duration="550" mode="Linear"/>
        </storyboard>
      </text>

	<text name="info4" extra="true">
		<fontPath>./../_inc/fonts/texgyre.otf</fontPath>
		<color>acb1bc</color>
		<alignment>left</alignment>
		<fontSize>0.018</fontSize>
		<lineSpacing>1</lineSpacing>
		<size>0.35 0</size>
		<pos>0.195 0.338</pos>
		<glowColor>00000016</glowColor>
		<glowSize>2</glowSize>
		<zIndex>42</zIndex>
				<storyboard>
<animation property="opacity" from="1" to="0" begin="6000" duration="550" mode="Linear"/>
        </storyboard>
      </text>

	<text name="info5" extra="true">
		<pos>2 2</pos>
		<zIndex>0</zIndex>
      </text>
	  
	<carousel name="systemcarousel">
       <type>vertical_wheel</type>
		<pos>0 0</pos>
        <size>1 1</size>
		<logoScale>1.3</logoScale>
		<logoSize>0.14 0.14</logoSize>
        <color>00000000</color>
		<logoRotation>-6.5</logoRotation>
		<logoRotationOrigin>5.0 0.3</logoRotationOrigin>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>5</maxLogoCount>
		<defaultTransition>instant</defaultTransition>	
		<zIndex>75</zIndex>
		<systemInfoDelay>0</systemInfoDelay>
	</carousel>

	<text name="systemInfo">
		<pos>-0.22 0.652</pos>
         <alignment>center</alignment>
         <fontPath>./../_inc/fonts/texgyre.otf</fontPath>
	     <fontSize>0.0128</fontSize>
	     <color>FFFFFF</color>
		 <zIndex>95</zIndex>
    </text>


	
     <helpsystem name="help">
		<fontPath>./../assets/Circular Std Book.ttf</fontPath>
         <fontSize>0.016</fontSize>
         <pos>0.045 0.955</pos>
         <textColor>FFFFFF</textColor>		<glowColor>00000016</glowColor>
		<glowSize>2</glowSize>
      </helpsystem>


</view>

   <view name="screen">
      <controllerActivity name="controllerActivity">
         <pos>0.03 0.025</pos>
         <size>0.085 0.025</size>
         <!--<horizontalAlignment>right</horizontalAlignment>-->
         <itemSpacing>0.003</itemSpacing>
         <imagePath>./../_inc/gamepad.svg</imagePath>
         <color>FFFFFF80</color>
         <activityColor>A0A0FFC0</activityColor>
         <hotkeyColor>FFA0A0C0</hotkeyColor>
      </controllerActivity>
   </view>

</theme>